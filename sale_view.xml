<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="magerp_view_shop_form">
			<field name="name">magerp_view_shop_form</field>
			<field name="model">sale.shop</field>
			<field name="inherit_id"
				ref="base_sale_multichannels.base_sale_multichannels_view_shop_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<data>
					<field name="exportable_root_category_ids" position="replace">
						<field name="exportable_root_category_ids" invisible="1" />
					</field>
					<field name="referential_id" position="replace">
						<field name="referential_id" readonly="1"/>	
					</field>
					<field name="shop_group_id" position="replace">
						<field name="shop_group_id" readonly="1"/>
						<field name="magento_root_category" readonly="1" />
						<field name="storeview_ids" nolabel="1" colspan="4" />
					</field>
				</data>
			</field>
		</record>

		<record id="act_magerp_shop_form" model="ir.actions.act_window">
			<field name="name">Magento Shops</field>
			<field name="res_model">sale.shop</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('referential_id', '!=', False)]</field>
		</record>

		<record model="ir.ui.view" id="magerp_view_order_tree">
			<field name="name">magerp_view_order_tree</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_tree" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="state" position="after">
					<field name="magento_payment_method" select="1" />
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="magerp_view_order_form">
			<field name="name">magerp_view_order_form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="fiscal_position" position="after">
					<field name="magento_payment_method" />
				</field>
			</field>
		</record>

		<record id="magerp_view_shop_images_form" model="ir.ui.view">
			<field name="name">magerp_view_shop_images_form</field>
			<field name="model">sale.shop</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base_sale_multichannels.base_sale_multichannels_view_shop_form"/>
			<field name="arch" type="xml">
				<field name="last_inventory_export_date" position="after">
						<group col="4" colspan="4">
							<button name="export_images" string="Update Images"
								colspan="2" type="object" />
							<field name="last_images_export_date" />
						</group>
				</field>
			</field>
		</record>

		<record id="magerp_view_shop_payment_type_form" model="ir.ui.view">
			<field name="name">magerp_view_shop_payment_type_form</field>
			<field name="model">sale.shop</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base_sale_multichannels.base_sale_multichannels_view_shop_form"/>
			<field name="arch" type="xml">
				<field name="picking_generation_policy" position="after">
					<group col="4" colspan="4">
					<field name="payment_types" nolabel="1"/>
					</group>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="view_magerp_sale_shop_payment_type_form">
			<field name="name">magerp_sale_shop_payment_type_form</field>
			<field name="model">magerp.sale.shop.payment.type</field>
			<field name="type">form</field>
			<field name="priority" eval="5"/>
			<field name="arch" type="xml">
			<form string="Payment Type">
				<field name="payment_type_id"/>
				<field name="order_policy"/>
				<field name="picking_policy"/>
				<field name="invoice_quantity"/>
			</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_magerp_sale_shop_payment_type_tree">
			<field name="name">magerp_sale_shop_payment_type_tree</field>
			<field name="model">magerp.sale.shop.payment.type</field>
			<field name="type">tree</field>
			<field name="priority" eval="5"/>
			<field name="arch" type="xml">
				<tree string="Payment Type">
					<field name="payment_type_id"/>
					<field name="order_policy"/>
					<field name="picking_policy"/>
					<field name="invoice_quantity"/>
				</tree>
			</field>
		</record>

	</data>
</openerp>
